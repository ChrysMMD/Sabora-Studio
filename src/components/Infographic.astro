---
const { overskrift, beskrivelse, billede } = Astro.props;
import "../stylesheet/globalstylesheet.css";
---

<div class="info">
  <img src={billede} alt="infographic logoer" />

  <h4>{overskrift}</h4>

  <p>{beskrivelse}</p>
</div>

<style>
  h4 {
    font-family: Amiko;
    font-size: 20px;
    color: var(--green);
  }

  .info {
    display: flex;
    flex-direction: column;
    align-items: center;
    align-content: center;
    width: 100%;
    background-color: var(--lightsand);
    padding: 10px;
  }

  /* .info p {
    padding: 0px 40px;
  } */
</style>
